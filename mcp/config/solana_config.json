  "solana": {
    "network": "devnet",
    "rpc_url": "https://api.devnet.solana.com",
    "commitment": "confirmed",
    "transaction_timeout": 60000,
    "max_retries": 3,
    "ai_models": {
      "tilt_detection": {
        "model_id": "tiltcheck-v1",
        "version": "1.0.0",
        "accuracy_target": 0.89
      }
    }
  },
  "agent": {
    "name": "TiltCheck",
    "endpoint": "https://tiltcheck.it.com/agent",
    "update_interval": 30,
    "batch_size": 100
  },
  "analysis": {
    "thresholds": {
      "rapid_spinning": {
        "window_minutes": 5,
        "threshold_spins": 50
      },
      "balance_drop": {
        "window_minutes": 10,
        "drop_threshold": 0.30
      },
      "session_duration": {
        "warning_minutes": 60,
        "critical_minutes": 120
      }
    },
    "risk_levels": {
      "low": [0, 40],
      "medium": [40, 70],
      "high": [70, 100]
    }
  }
}
