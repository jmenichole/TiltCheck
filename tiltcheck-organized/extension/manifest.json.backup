{
  "manifest_version": 3,
  "name": "TiltCheck Advanced Screen Reader",
  "version": "1.0.0",
  "description": "Advanced gambling behavior monitoring with screen reading and AI analysis",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "desktopCapture",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.stake.com/*",
        "*://*.bovada.lv/*", 
        "*://*.ignitioncasino.eu/*",
        "*://*.draftkings.com/*",
        "*://*.fanduel.com/*",
        "*://*.mgm.com/*",
        "*://*.caesars.com/*",
        "*://*.bet365.com/*",
        "*://*.pokerstars.com/*",
        "*://*.888casino.com/*"
      ],
      "js": ["content-script-advanced.js"],
      "css": ["tiltcheck-overlay.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup-advanced.html",
    "default_title": "TiltCheck Screen Reader"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "tiltcheck-api.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "options_page": "options.html"
}