/* TiltCheck Landing Page Styles */
.tiltcheck-landing {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  line-height: 1.6;
  color: #1a202c;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
}

.tiltcheck-landing.loaded {
  opacity: 1;
}

/* Navigation */
.navbar {
  position: fixed;
  top: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  z-index: 1000;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem 2rem;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 700;
  font-size: 1.5rem;
}

.logo {
  font-size: 2rem;
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 2rem;
}

/* Mobile Menu Toggle */
.mobile-menu-toggle {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 24px;
  height: 18px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.mobile-menu-toggle span {
  display: block;
  height: 2px;
  width: 100%;
  background: #667eea;
  border-radius: 1px;
  transition: all 0.3s ease;
}

/* Mobile Navigation */
@media (max-width: 768px) {
  .nav-container {
    padding: 0.75rem 1rem;
  }
  
  .nav-brand {
    font-size: 1.25rem;
  }
  
  .logo {
    font-size: 1.5rem;
  }
  
  .mobile-menu-toggle {
    display: flex;
  }
  
  .nav-links {
    display: none;
  }
  
  .nav-links.mobile-open {
    display: flex;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    flex-direction: column;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    gap: 1.25rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .nav-links.mobile-open a {
    padding: 0.75rem 0;
    color: #667eea;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 1px solid rgba(102, 126, 234, 0.1);
    transition: color 0.2s;
  }
  
  .nav-links.mobile-open a:hover {
    color: #4c51bf;
  }
  
  .nav-links.mobile-open .cta-button {
    margin-top: 0.5rem;
    align-self: center;
    width: auto;
    min-width: 150px;
  }
}

.nav-links a {
  text-decoration: none;
  color: #4a5568;
  font-weight: 500;
  transition: color 0.2s;
}

.nav-links a:hover {
  color: #667eea;
}

.cta-button {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s;
}

.cta-button:hover {
  transform: translateY(-2px);
}

/* Hero Section */
.hero-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 8rem 2rem 4rem;
  flex: 1;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 1rem;
  background: linear-gradient(45deg, #fff, #a0aec0);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #e2e8f0;
}

/* Mobile Hero Responsiveness */
@media (max-width: 768px) {
  .hero-content {
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 6rem 1rem 2rem;
    text-align: center;
  }
  
  .hero-title {
    font-size: 2.5rem;
    line-height: 1.2;
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }
}

@media (max-width: 480px) {
  .hero-content {
    padding: 5rem 0.75rem 1.5rem;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
}

.hero-description {
  font-size: 1.1rem;
  margin-bottom: 2rem;
  color: #cbd5e0;
  line-height: 1.7;
}

.hero-cta {
  display: flex;
  gap: 1rem;
  margin-bottom: 3rem;
}

.primary-cta, .secondary-cta {
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.3s;
  border: none;
}

.primary-cta {
  background: white;
  color: #667eea;
}

.primary-cta:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.secondary-cta {
  background: transparent;
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.secondary-cta:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.6);
}

.hero-stats {
  display: flex;
  gap: 2rem;
}

.stat {
  text-align: center;
}

.stat strong {
  display: block;
  font-size: 2rem;
  font-weight: 800;
  color: #ffd700;
}

.stat span {
  font-size: 0.9rem;
  color: #cbd5e0;
}

/* Mobile Stats and Actions */
@media (max-width: 768px) {
  .hero-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 2rem 0;
  }
  
  .stat strong {
    font-size: 1.5rem;
  }
  
  .stat span {
    font-size: 0.8rem;
  }
  
  .hero-actions {
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .hero-cta {
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .hero-stats {
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }
}

/* Browser Mockup */
.hero-visual {
  display: flex;
  justify-content: center;
  align-items: center;
}

.browser-mockup {
  background: white;
  border-radius: 1rem;
  overflow: hidden;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  width: 100%;
  max-width: 500px;
}

.browser-header {
  background: #f7fafc;
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  border-bottom: 1px solid #e2e8f0;
}

.browser-dots {
  display: flex;
  gap: 0.5rem;
}

.browser-dots span {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #cbd5e0;
}

.browser-dots span:first-child { background: #fc8181; }
.browser-dots span:nth-child(2) { background: #f6e05e; }
.browser-dots span:nth-child(3) { background: #68d391; }

.address-bar {
  background: white;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  color: #4a5568;
  border: 1px solid #e2e8f0;
  flex: 1;
}

.browser-content {
  padding: 2rem;
}

.tilt-warning {
  background: linear-gradient(135deg, #fed7d7, #feb2b2);
  border: 2px solid #fc8181;
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.warning-icon {
  font-size: 2rem;
}

.warning-text h3 {
  color: #c53030;
  margin: 0 0 0.5rem 0;
  font-size: 1.1rem;
  font-weight: 700;
}

.warning-text p {
  color: #742a2a;
  margin: 0 0 1rem 0;
}

.intervention-btn {
  background: #c53030;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
}

/* Sections */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 1rem;
  color: #2d3748;
}

.section-subtitle {
  text-align: center;
  font-size: 1.2rem;
  color: #718096;
  margin-bottom: 3rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

/* Features Section */
.features-section {
  padding: 6rem 0;
  background: white;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.feature-card {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  border: 1px solid #e2e8f0;
  transition: transform 0.3s;
}

/* Mobile Features Responsiveness */
@media (max-width: 768px) {
  .features-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .feature-card {
    padding: 1.5rem;
    margin: 0 1rem;
  }
  
  .feature-icon {
    font-size: 2.5rem;
  }
  
  .feature-card h3 {
    font-size: 1.25rem;
  }
}

@media (max-width: 480px) {
  .feature-card {
    padding: 1.25rem;
    margin: 0 0.75rem;
  }
  
  .feature-icon {
    font-size: 2rem;
  }
}

.feature-card:hover {
  transform: translateY(-5px);
}

.feature-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.feature-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: #2d3748;
}

.feature-card p {
  color: #718096;
  margin-bottom: 1rem;
}

.feature-card ul {
  list-style: none;
  padding: 0;
}

.feature-card li {
  color: #4a5568;
  margin-bottom: 0.5rem;
  padding-left: 1.5rem;
  position: relative;
}

.feature-card li:before {
  content: "âœ…";
  position: absolute;
  left: 0;
}

/* Extension Section */
.extension-section {
  padding: 6rem 0;
  background: #f7fafc;
}

.extension-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.large-text {
  font-size: 1.2rem;
  color: #718096;
  margin-bottom: 2rem;
}

.extension-features {
  margin-bottom: 2rem;
}

.ext-feature {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

.check {
  font-size: 1.2rem;
}

.install-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 2rem;
}

.install-btn {
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.3s;
  border: none;
}

.install-btn.packed {
  background: #667eea;
  color: white;
}

.install-btn.unpacked {
  background: #4a5568;
  color: white;
}

.install-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.installation-note {
  background: #e2e8f0;
  padding: 1rem;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  color: #4a5568;
}

.chrome-store-card {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.store-header {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.store-icon {
  width: 48px;
  height: 48px;
  border-radius: 0.5rem;
}

.rating {
  color: #f6ad55;
  font-size: 0.9rem;
}

.store-install-btn {
  background: #1a73e8;
  color: white;
  border: none;
  padding: 0.75rem 2rem;
  border-radius: 0.5rem;
  font-weight: 600;
  cursor: pointer;
  width: 100%;
  margin-top: 1rem;
}

/* Surveys Section */
.surveys-section {
  padding: 6rem 0;
  background: white;
}

.surveys-demo {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  margin-bottom: 3rem;
  flex-wrap: wrap;
}

.demo-card {
  background: white;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  text-align: center;
  min-width: 250px;
}

/* Mobile Demo Section */
@media (max-width: 768px) {
  .surveys-demo {
    flex-direction: column;
    gap: 1rem;
  }
  
  .demo-card {
    padding: 1.5rem;
    min-width: auto;
    width: 90%;
    max-width: 350px;
  }
  
  .arrow {
    transform: rotate(90deg);
    font-size: 1.5rem;
  }
}

@media (max-width: 480px) {
  .demo-card {
    padding: 1.25rem;
    width: 95%;
  }
}

.demo-card.intervention {
  border-top: 4px solid #fc8181;
}

.demo-card.redirect {
  border-top: 4px solid #4299e1;
}

.demo-card.success {
  border-top: 4px solid #48bb78;
}

.arrow {
  font-size: 2rem;
  color: #667eea;
}

.alert {
  background: #fed7d7;
  color: #c53030;
  padding: 0.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  margin-top: 1rem;
}

.opportunity {
  background: #bee3f8;
  color: #2b6cb0;
  padding: 0.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  margin-top: 1rem;
}

.savings {
  background: #c6f6d5;
  color: #276749;
  padding: 0.5rem;
  border-radius: 0.5rem;
  font-weight: 600;
  margin-top: 1rem;
}

.surveys-cta {
  text-align: center;
}

.surveys-btn {
  background: linear-gradient(135deg, #48bb78, #38a169);
  color: white;
  border: none;
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  font-size: 1.2rem;
  cursor: pointer;
  transition: transform 0.3s;
}

.surveys-btn:hover {
  transform: translateY(-3px);
}

/* Footer */
.footer {
  background: #2d3748;
  color: white;
  padding: 4rem 0 2rem;
}

.footer-content {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-brand p {
  color: #a0aec0;
  margin-top: 1rem;
}

.link-group h4 {
  margin-bottom: 1rem;
  color: white;
}

.link-group a {
  display: block;
  color: #a0aec0;
  text-decoration: none;
  margin-bottom: 0.5rem;
  transition: color 0.2s;
}

.link-group a:hover {
  color: white;
}

.footer-bottom {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid #4a5568;
  color: #a0aec0;
}

/* Enhanced Mobile Responsive Design */
@media (max-width: 768px) {
  /* Global mobile spacing */
  .container {
    padding: 0 1rem;
  }
  
  /* Section padding adjustments */
  .features-section,
  .surveys-section,
  .extension-section,
  .contact-section {
    padding: 3rem 0;
  }
  
  /* Section headers */
  .section-header h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .section-header p {
    font-size: 1rem;
  }
  
  /* Hero adjustments (already defined above) */
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
  }
  
  .hero-title {
    font-size: 2.5rem;
  }
  
  /* Navigation */
  .nav-links {
    display: none;
  }
  
  /* Extension section */
  .extension-content {
    grid-template-columns: 1fr;
  }
  
  /* Footer mobile */
  .footer {
    padding: 2rem 0 1rem;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }
  
  /* Demo adjustments (already defined above) */
  .surveys-demo {
    flex-direction: column;
  }
}

/* Extra small mobile devices */
@media (max-width: 480px) {
  /* Typography scaling */
  .section-header h2 {
    font-size: 1.75rem;
  }
  
  /* Button adjustments */
  .cta-button,
  .hero-cta {
    padding: 0.75rem 1.25rem;
    font-size: 0.9rem;
  }
  
  /* Container padding */
  .container {
    padding: 0 0.75rem;
  }
  
  /* Section padding */
  .features-section,
  .surveys-section,
  .extension-section,
  .contact-section {
    padding: 2rem 0;
  }
  }
  
  .arrow {
    transform: rotate(90deg);
  }
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.feature-card,
.demo-card {
  animation: fadeInUp 0.6s ease forwards;
}

.feature-card:nth-child(2) { animation-delay: 0.1s; }
.feature-card:nth-child(3) { animation-delay: 0.2s; }
.feature-card:nth-child(4) { animation-delay: 0.3s; }