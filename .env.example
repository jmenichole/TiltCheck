# TiltCheck + JustTheTip Unified Configuration
# Secrets can be shared between repositories

# ============================================
# COINBASE PAYMENT INTEGRATION (SHARED)
# ============================================
COINBASE_APP_ID=ca8b3b06-99e0-4611-affd-b39c2e7ca273
COINBASE_API_KEY=your_key
COINBASE_API_SECRET=your_secret
COINBASE_WALLET_SECRET=your_secret

# ============================================
# DISCORD INTEGRATION
# ============================================
DISCORD_CLIENT_ID=your_id
DISCORD_CLIENT_SECRET=your_secret
DISCORD_BOT_TOKEN=your_bot_token
DISCORD_ALERT_WEBHOOK=your_webhook_url

# ============================================
# JWT AUTHENTICATION (PRODUCTION)
# ============================================
# CRITICAL: Generate a secure secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Options: 'json', 'postgresql', 'mongodb'
DB_TYPE=json

# PostgreSQL (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tiltcheck
DB_USER=tiltcheck
DB_PASSWORD=your_db_password
DB_SSL=false

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=tiltcheck

# ============================================
# SOLANA BLOCKCHAIN (SHARED with JustTheTip)
# ============================================
SOLANA_WALLET_PRIVATE_KEY=your_key
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PROGRAM_ID=your_program_id

# ============================================
# TIPCC INTEGRATION (SHARED with JustTheTip)
# ============================================
TIPCC_API_KEY=your_key
TIPCC_SECRET_KEY=your_secret

# ============================================
# CROSS-REPOSITORY SECRETS
# ============================================
# Path to JustTheTip secrets file for automatic sharing
JUSTTHETIP_SECRETS_PATH=../justthetip/config/secrets.json
# Encryption key for local secrets file (32 bytes hex)
SECRETS_ENCRYPTION_KEY=your_32_byte_hex_key

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# CORS Configuration - Domain Whitelisting
# Development: Use '*' to allow all origins
# Production: Comma-separated list of allowed domains
# Examples:
#   Single domain: https://tiltcheck.com
#   Multiple domains: https://tiltcheck.com,https://app.tiltcheck.com,https://admin.tiltcheck.com
#   Subdomains: https://*.tiltcheck.com
CORS_ORIGIN=*

# ============================================
# MONITORING & ALERTS
# ============================================
# Discord webhook for system alerts
DISCORD_ALERT_WEBHOOK=your_alert_webhook
# Log level: debug, info, warning, error
LOG_LEVEL=info

# ============================================
# CI/CD & DEPLOYMENT
# ============================================
# Railway
RAILWAY_TOKEN=your_railway_token

# VPS Deployment
VPS_HOST=your_vps_ip
VPS_USERNAME=your_username
VPS_PORT=22

# Docker Hub
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ============================================
# EMAIL SERVICE (Optional)
# ============================================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@tiltcheck.com

# ============================================
# RATE LIMITING
# ============================================
# Enable rate limiting in production
RATE_LIMIT_ENABLED=true
# Requests per 15 minutes
RATE_LIMIT_MAX=100

# ============================================
# SECURITY
# ============================================
# Enable security features
HELMET_ENABLED=true
CORS_ENABLED=true
# SSL/HTTPS in production
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
