{
  "manifest_version": 3,
  "name": "TiltCheck Dashboard Extension",
  "version": "1.0.0",
  "description": "Real-time gambling behavior monitoring and accountability dashboard",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TiltCheck Dashboard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}